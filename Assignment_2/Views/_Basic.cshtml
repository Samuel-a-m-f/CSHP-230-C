<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="row">
        <div class="col-sm-2" style="background-color:#212121; height: 50px;">
            <h3 class="whiteTextOverride text-center">Learning Center</h3>
        </div>
        <div class="col-sm-6" style="background-color:#212121; height: 50px;">
            <div class="btn btn-link pull-left btn-lg ">
                @Html.ActionLink("Home", "Index")
            </div>
            <button type="button" class="btn btn-link pull-left btn-lg">About</button>
            <button type="button" class="btn btn-link pull-left btn-lg">Contact</button>
        </div>
        <div class="col-sm-4" style="background-color:#212121; height: 50px;">
            <button type="button" class="btn btn-link pull-right btn-lg">Login</button>
            <button type="button" class="btn btn-link pull-right btn-lg">Register</button>
        </div>
    </div>
    <div style="padding:30px; font-size: 10pt">
        @RenderBody()
    </div>
</body>
</html>